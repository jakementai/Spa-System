@page "{id:int?}"
@model Spa_System.Pages.Beauticians.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Beautician</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beautician.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beautician.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beautician.ContactNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beautician.ContactNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beautician.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beautician.Age)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Beautician.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<br />
<div>
    <h5>Beautician's Appointments</h5>
    <table class="table">
        <tr>
            <th>Appointment Date</th>
            <th>Appointment Time</th>
            <th>Customer (ID)</th>
        </tr>

        @foreach(var item in Model.Beautician.BeauticianAppointments
            .Where(d => d.AppointmentDate != null)
            .OrderBy(d => d.AppointmentDate)
            .ThenBy(t => t.AppointmentTime))
        {
            <tr>
                <td>@item.AppointmentDate.Value.ToString("dddd, dd MMMM yyyy")</td>
                <td>@item.AppointmentTime</td>
                <td>@item.Customer.Name (@item.CustomerID)</td>
            </tr>
        }
    </table>
</div>
