@page "{id:int?}"
@model Spa_System.Pages.Treatments.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Treatment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Treatment.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Treatment.Name)
        </dd>
    </dl>
    <h5>Present in:</h5>
    <dl class="row">
        @foreach(var item in Model.Treatment.PackageTreatments)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(anItem => item.Package.PackageName)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Treatment.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
