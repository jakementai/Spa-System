<div class="text-center">
    <h3 class="display-4">Our Packages</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Package Name
                </th>
                <th>
                    Treatments Included
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Packages)
            {
                <tr>
                    <td>@item.PackageName - (RM @item.Price)</td>
                    <td>
                        @foreach (var treats in item.PackageTreatments)
                        {
                            @treats.Treatment.Name<span>, </span>

                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

