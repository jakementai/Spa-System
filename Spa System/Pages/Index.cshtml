@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <style>
        * {
            box-sizing: border-box;
        }

        ul {
            list-style-type: none;
        }

        .calander {
            font-family: Verdana, sans-serif !important;
        }

        .month {
            padding: 50px 25px;
            width: 100%;
            background: #ab3587;
            text-align: center;
        }

            .month ul {
                margin: 0;
                padding: 0;
            }

                .month ul li {
                    color: white;
                    font-size: 20px;
                    text-transform: uppercase;
                    letter-spacing: 3px;
                }

            .month .prev {
                float: left;
                padding-top: 10px;
            }

            .month .next {
                float: right;
                padding-top: 10px;
            }

        .weekdays {
            margin: 0;
            padding: 10px 0;
            background-color: #ddd;
        }

            .weekdays li {
                display: inline-block;
                width: 12%;
                color: #666;
                text-align: center;
            }

        .days {
            padding: 10px 0;
            background: #eee;
            margin: 0;
        }

            .days li {
                list-style-type: none;
                display: inline-block;
                width: 12%;
                text-align: center;
                margin-bottom: 5px;
                font-size: 12px;
                color: #777;
            }

                .days li .active {
                    padding: 5px;
                    background: #ab3587;
                    color: white !important
                }
    </style>
</head>

<div style="width: 50%; display:block; float:left">
    <div class="text-center">

        <h3 class="display-4">Upcoming Appointment</h3>
    </div>
    <table class="table">
        <tr>
            <th>Date :</th>
            <td>
                @Model.Appointment.First().AppointmentDate.Value.ToString("dddd, dd MMMM yyyy")
            </td>
        </tr>
        <tr>
            <th>Time :</th>
            <td>
                @Model.Appointment.First().AppointmentTime
            </td>
        </tr>
        <tr>
            <th>Beautician On Duty: </th>
            <td>
                <a asp-page="./Beauticians/Details" asp-route-id="@Model.Appointment.First().BeauticianID">
                    @Model.Appointment.First().Beautician.Name
                </a>

            </td>
        </tr>
        <tr>
            <th>Customer Name: </th>
            <td>
                <a asp-page="./Customers/Details" asp-route-id="@Model.Appointment.First().CustomerID">

                    @Model.Appointment.First().Customer.Name
                </a>
            </td>
        </tr>
    </table>
</div>
<div class="calander" style="width:45%; display:block; float:left; margin-left:5%">
    <div class="month">
        <ul>
            <li class="prev">&#10094;</li>
