@page
@model Spa_System.Pages.PackageAppointments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PackageAppointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PackageAppointment.ID" />
            <input type="hidden" asp-for="PackageAppointment.PackageID" />
            <input type="hidden"  asp-for="PackageAppointment.CustomerID" />
            <div class="form-group">
                <label asp-for="PackageAppointment.AppointmentDate" class="control-label"></label>
                <input asp-for="PackageAppointment.AppointmentDate" class="form-control" />
                <span asp-validation-for="PackageAppointment.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageAppointment.AppointmentTime" class="control-label"></label>
                <input asp-for="PackageAppointment.AppointmentTime" class="form-control" />
                <span asp-validation-for="PackageAppointment.AppointmentTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageAppointment.discountGiven" class="control-label"></label>
                <input asp-for="PackageAppointment.discountGiven" class="form-control" />
                <span asp-validation-for="PackageAppointment.discountGiven" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageAppointment.Status" class="control-label"></label>
                <select asp-for="PackageAppointment.Status" class="form-control">
                    <option value="Registered/Unpaid">Registered/Unpaid</option>
                    <option value="Paid">Paid</option>
                    <option value="Completed">Completed</option>
                    <option value="Canceled">Canceled</option>

                </select>
                <span asp-validation-for="PackageAppointment.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageAppointment.BeauticianID" class="control-label"></label>
                <select asp-for="PackageAppointment.BeauticianID" class="form-control" asp-items="ViewBag.BeauticianID"></select>
                <span asp-validation-for="PackageAppointment.BeauticianID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageAppointment.PackageID" class="control-label"></label>
                <select disabled="disabled" asp-for="PackageAppointment.PackageID" class="form-control" asp-items="ViewBag.PackageID"></select>
                <span asp-validation-for="PackageAppointment.PackageID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageAppointment.CustomerID" class="control-label"></label>
                <select disabled="disabled" asp-for="PackageAppointment.CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="PackageAppointment.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="../Customers/Details?id=@Model.PackageAppointment.CustomerID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
