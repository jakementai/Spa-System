@page
@model Spa_System.Pages.PackageAppointments.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PackageAppointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PackageAppointment.AppointmentDate)
        </dt>
        <dd class="col-sm-10">
            @Model.PackageAppointment.AppointmentDate.Value.ToString("dddd, dd MMMM yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PackageAppointment.AppointmentTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PackageAppointment.AppointmentTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PackageAppointment.discountGiven)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PackageAppointment.discountGiven) %
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PackageAppointment.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PackageAppointment.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PackageAppointment.Beautician) (ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PackageAppointment.Beautician.Name) (@Model.PackageAppointment.BeauticianID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PackageAppointment.CustomerPackage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PackageAppointment.CustomerPackage.PackageName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PackageAppointment.Customer) (ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PackageAppointment.Customer.Name) (@Model.PackageAppointment.CustomerID)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.PackageAppointment.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
