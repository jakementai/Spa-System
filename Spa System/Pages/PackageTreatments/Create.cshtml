@page
@model Spa_System.Pages.PackageTreatments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PackageTreatment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input hidden="hidden" asp-for="PackageTreatment.PackageID" value="@Model.PackageID"/>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PackageTreatment.PackageID" class="control-label"></label>
                <select disabled="disabled" asp-for="PackageTreatment.PackageID" class="form-control" asp-items="ViewBag.PackageID"></select>
            </div>
            <div class="form-group">
                <label asp-for="PackageTreatment.TreatmentID" class="control-label"></label>
                <select asp-for="PackageTreatment.TreatmentID" class="form-control" asp-items="ViewBag.TreatmentID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Packages/Details" asp-route-id="@Model.PackageID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
